<body>
    <!-- Header -->    
    <%- include('../partials/header.ejs') %>
    <!-- Header Ends!! -->
    <div class="center-container">
      <p><%= messages.success %></p>
      <div>
        <h3 id="h4"> تحديث القاعة </h3>
      </div>
     <a href="/rooms" title="إلفاء" id="cancel" class="mt-5"><button type="button" class="btn-close" aria-label="Close" style="margin-left: 13px;"></button></a> 
     <div class="container my-5" dir="rtl">
          <form action="/edit-room/<%= rooms._id %>?_method=PUT"  class="row g-3" autocomplete="off" method="POST">
            <div class="col-md-6">
              <label class="form-label cus-label" >القاعة</label><span> :</span>
              <input type="text" value="<%= rooms.name_room %>" name="name_room" required placeholder="اسم القاعة" id="input-field" class="form-control">
            </div>
            <div class="col-md-6">
              <label class="form-label cus-label" > سعة القاعة   </label><span> :</span>
              <input type="text" value="<%= rooms.capacity_room%>" name="capacity_room" placeholder="سعة القاعة" id="input-field" class="form-control">
            </div>
            <div class="col-md-6">
              <label class="form-label cus-label" > متوفرة   </label><span> :</span>
              <select class="form-select" aria-label="Default select example" id="input-field" name="selected_dispo_room">
                <option value=" OUI" <%= rooms.selected_dispo_room === 'OUI' ? 'selected' : '' %>> OUI </option>
                <option value=" NON"  <%= rooms.selected_dispo_room === 'NON' ? 'selected' : '' %>>NON </option>
              </select>

             
            </div>
            <div class="col-md-6">
              
              
              <label class="form-label cus-label">معدات القاعة  </label><span> :</span>
              <select class="form-select" aria-label="Default select example" id="input-field" name="equipement_room">
                <option value="Projecteur" <%= rooms.equipement_room === 'Projecteur' ? 'selected' : '' %>>Projecteur</option>
                <option value="Tableau de Feutre" <%= rooms.equipement_room === 'Tableau de Feutre' ? 'selected' : '' %>>Tableau de Feutre</option>
                <option value="Tableau intelligent" <%= rooms.equipement_room === 'Tableau intelligent' ? 'selected' : '' %>>Tableau intelligent</option>
                <option value="Poste de Travail" <%= rooms.equipement_room === 'Poste de Travail' ? 'selected' : '' %>>Poste de Travail</option>
                <option value="Bureau" <%= rooms.equipement_room === 'Bureau' ? 'selected' : '' %>>Bureau</option>
                <option value="Écran de Télévision" <%= rooms.equipement_room === 'Écran de Télévision' ? 'selected' : '' %>>Écran de Télévision</option>
              </select>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck1" required>
                <label class="custom-control-label" for="customCheck1">اشهد على صحة المعلومات المصرح بها</label>
            </div>
            <button type="submit" class="btn w-25 btn-primary">إضافة</button>
          </form>
      </div>
    </div>
