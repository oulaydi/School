<!DOCTYPE html>
<html lang="fr">
<head>
    

	<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="css/teacherDashboard.css" />
    <title>Professeur</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
    #center-container {
        margin-left: auto;
        margin-right: auto;
    }
</style>
<body>
    <!-- SIDEBAR -->

	<section dir="ltr" id="sidebar">
        <ul class="side-menu top">
            <li class="active">
                <a href="#">
                    <i class="bx bxs-user"></i>
                    <span style="font-size: 20px;" class="text"><%= director.username %></span>
                </a>
            </li>
            <li>
                <a href="/teachers">
                    <i class="bx bxs-user"></i>
                    <span style="font-size: 20px;" class="text">  enseignants</span>
                </a>
            </li>
            <li>
                <a href="/students">
                    <i class="bx bxs-user"></i>
                    <span style="font-size: 20px;" class="text">  étudiants</span>
                </a>
            </li>
            <li>
                <a href="/Module">
                    <i class="bx bxs-check-circle"></i>
                    <span style="font-size: 20px;" class="text">  modules</span>
                </a>
            </li>
            <li>
                <a href="/groups">
                    <i class="bx bxs-group"></i> 
                    <span style="font-size: 20px;" class="text">  groupes</span>
                </a>
            </li>
            <li>
                <a href="/rooms">
                    <i class="bx bx-door-open"></i>
                    <span style="font-size: 20px;" class="text">  salles</span>
                </a>
            </li>
        
            <li>

                <a href="/seances">
                    <i class="bx bx-calendar-event"></i>
                    <span style="font-size: 20px;" class="text"> séances</span>
                </a>
            </li>
            
            <li>
                <a href="/schedules">
                    <i class="bx bxs-calendar"></i>
                    <span style="font-size: 20px;" class="text">Emploi du temps</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog' ></i>
                    <span style="font-size: 20px;" class="text">Paramètres</span>
                </a>
            </li>
            <li>
                <a href="/logout" class="logout">
                    <i class='bx bx-log-out'></i>
                    <span style="font-size: 20px;" class="text">Déconnexion</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu' ></i>
            <form action="#">
                <div>
                    <!-- <div class="form-input">
                        <input type="search" placeholder="Search...">
                        <button type="submit" class="search-btn"><i class='bx bx-search' ></i></button> -->
                    </div>
                </form>
                <a href="#" class="notification">
                    <i class='bx bxs-bell' ></i>
                    <span class="num">8</span>
                </a>
                <a href="#" class="profile">
                    <img src="images/oulaydi.png">
                </a>
            </nav>
            <!-- NAVBAR -->

            <!-- MAIN -->
            <main dir="ltr">
                <div class="head-title">
                    <div class="left">
                  
                    </div>
                   
                </div>

                <ul class="box-info">
                    <li>
                        <i class='bx bxs-calendar-check'></i>
                        <span class="text">
                            <h3><%=countCour%></h3>
                            <p style="font-size: 20px;">Cours</p>
                        </span>
                    </li>
                    <li>
                        <i class='bx bxs-group'></i>
                        <span class="text">
                            <h3><%=countStudent%></h3>
                            <p style="font-size: 20px;">Étudiants</p>
                        </span>
                    </li>
                    <li>
                        <i class='bx bxs-info-circle'></i>
                        <span class="text">
                            <h3><%=countModule%></h3>
                            <p style="font-size: 20px;">Modules</p>
                        </span>
                    </li>
                </ul>


		
					<div class="order" style="height:auto; padding-top: 6%;">
						<div class="head">
                            <h3>Liste des enseignants</h3>
						
							</div>
						
							<table class="table table-bordered w-75" id="center-container" dir="ltr">
								<thead class="thead-dark">
									<tr class="text-center">
										<th style="text-align: center; font-size: 20px;" scope="col">Nom complet</th>
										<th style="text-align: center; font-size: 20px;" scope="col">Nom d'utilisateur</th>
										<th style="text-align: center; font-size: 20px;" scope="col">Adresse e-mail</th>
										<th style="text-align: center; font-size: 20px;" scope="col">Spécialité</th>
										<th style="text-align: center; font-size: 20px;" scope="col">Action</th>
									</tr>
								</thead>
								<tbody class="table-group-divider">
									<% teachers.forEach(teacher => { %>
										<tr class="text-center">
											<td class="table-info"><%= teacher.name_professeur %></td>
											<td class="table-info"><%= teacher.username %></td>
											<td class="table-info"><%= teacher.email %></td>
											<td class="table-info"><%= teacher.specialite %></td>
											<td class="table-info" class="actions">
												<button type="button" class="btn btn-warning">
													<a class="fw-semibold text-decoration-none link-light py-3" href="/edit-teacher/<%= teacher._id %>">Mettre à jour</a>
												</button>
												<form action="/edit-teacher/<%= teacher._id %>?_method=DELETE" method="POST" style="display: inline;">
													<button type="submit" class="btn btn-danger">
														Supprimer
													</button>
												</form>
											</td>
										</tr>
									<% }); %>
								</tbody>
							</table>
						</div>
					</div>
				</main>
				<!-- MAIN -->
			</section>
			<!-- CONTENT -->
			<script src="/js/teacherDashboard..js"></script>

		</body>
	</html>
	