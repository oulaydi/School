<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="css/teacherDashboard.css" />

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet"/>


</head>
<style>

        #center-container {
            margin-left: auto;
            margin-right: auto;
        }



	
</style>
<body>


	<!-- SIDEBAR -->
	<section dir="rtl" id="sidebar">
	
		<ul class="side-menu top">

			<li class="active">
				<a href="#">
					<i class="bx bxs-user"></i>
					<span  style="font-size: 20px;" class="text"><%= director.username %></span>
				</a>
			</li>
			<li>
				<a href="/teachers">
					<i class="bx bxs-user"></i>
					<span  style="font-size: 20px;" class="text">لاىحة الاساتدة</span>
				</a>
			</li>
			<li>
				<a href="/students">
					<i class="bx bxs-user"></i>
					<span  style="font-size: 20px;" class="text">لاىحة الثلاميد</span>
				</a>
			</li>
			<li>
				<a href="/Module">
					<i class="bx bxs-check-circle"></i>


					<span  style="font-size: 20px;" class="text">لاىحة  الوحدات</span>
				</a>
			</li>
			<li>
				<a href="/groups">
					<i class="bx bxs-group"></i> 


					<span  style="font-size: 20px;" class="text">لاىحة المجموعات</span>
				</a>
			</li>
			<li>
				<a href="/rooms">
					<i class="bx bx-door-open"></i>



					<span  style="font-size: 20px;" class="text">لاىحة القاعات</span>
				</a>
			</li>
		
			<li>

				<a href="/seances">
					<i class="bx bx-calendar-event"></i>


					<span  style="font-size: 20px;" class="text">لاىحة الحصص</span>
				</a>
			</li>
			
			<li>
				<a href="/schedules">
					<i class="bx bxs-calendar"></i>

					<span  style="font-size: 20px;" class="text">استعمال الزمن</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog' ></i>
					<span   style="font-size: 20px;" class="text" style="font-size: 20px;">الاعدادات</span>
				</a>
			</li>
			<li>
				<a href="/logout" class="logout">
					<i class='bx bx-log-out'></i>
					<span  style="font-size: 20px;" class="text">تسجيل الحروج</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<form action="#">
				<div>
				<!-- <div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button> -->
				</div>
			</form>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="images/oulaydi.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main dir="rtl">
			<div class="head-title">
				<div class="left">
					<h1 >لوحة التحكم</h1>
				
				</div>
				<a href="" class="btn-download">
					<i class='bx bxs-cloud-upload'></i>
					<span  style="font-size: 20px;" class="text">اضافة الدروس</span>
				</a>
			</div>

			<ul  class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3><%=countCour%></h3>
						<p  style="font-size: 20px;">الدروس</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-group' ></i>
					<span class="text">
						<h3><%=countStudent%></h3>
						<p  style="font-size: 20px;">الثلاميد</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-info-circle'></i>
					<span class="text">
						<h3><%=countModule%></h3>
						<p  style="font-size: 20px;">الوحدات</p>
					</span>
				</li>
			</ul>


			<div dir="rtl" class="table-data">
				<div class="order" style="height: 50vh;  padding-top: 6%;">
					<div class="head">
						<h3 > لاىحة الاساتدة</h3>
						<i class='bx bx-search'></i>
						<i class='bx bx-filter'></i>
					</div>
					<table class="table table-bordered w-75" id="center-container" dir="rtl">
						<thead class="thead-dark">
							<tr class="text-center">
								<th  style="text-align: center; font-size: 20px;" scope="col">الإسم الكامل</th>
								<th  style="text-align: center; font-size: 20px;" scope="col">إسم المستخدم</th>
								<th   style="text-align: center; font-size: 20px;" scope="col">البريد الالكتروني</th>
								<th  style="text-align: center; font-size: 20px;" scope="col">يدرس</th>
								<th  style="text-align: center; font-size: 20px;" scope="col">إجراء</th>
							</tr>
						</thead>
						<tbody class="table-group-divider">
							<% teachers.forEach(teacher => { %>
								<tr class="text-center">
									<td  class="info"><%= teacher.name_professeur %></td>
									<td class="info"><%= teacher.username %></td>
									<td class="info"><%= teacher.email %></td>
									<td class="info"><%= teacher.specialite %></td>
									<td class="actions">
										<button type="button" class="btn btn-warning">
											<a class="fw-semibold text-decoration-none link-light py-3" href="/edit-teacher/<%= teacher._id %>">تحديث</a>
										</button>
										<form action="/edit-teacher/<%= teacher._id %>?_method=DELETE" method="POST" style="display: inline;">
											<button type="submit" class="btn btn-danger">
												حذف
											</button>
										</form>
									</td>
								</tr>
							<% }); %>
						</tbody>
					</table>
					
				

	
				
			
			</div>
			
		</main>
		
		<!-- MAIN -->
	</section>

	
	
	<!-- CONTENT -->



	<script src="/js/teacherDashboard..js"></script>
	
</body>
</html>