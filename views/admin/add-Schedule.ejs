    <link rel="stylesheet" href="../../public/css/forms.css" />
    <link rel="stylesheet" href="css/student.css" />

    <link rel="stylesheet" href="/css/add-teacher.css" />
  </head>
<body>
    <!-- Header -->    
    <%- include('../partials/header.ejs') %>
    <!-- Header Ends!! -->
    <div class="center-container">
      <p><%= messages.success %></p>
      <div>
        <h3 id="h4">اضافة استعمال الزمن</h3>
      </div>
     <a href="/schedules" title="إلفاء" id="cancel" class="mt-5"><button type="button" class="btn-close" aria-label="Close" style="margin-left: 13px;"></button></a> 
     <div class="container my-5" dir="rtl">
          <form action="/add-schedule" class="row g-3" autocomplete="off" method="POST">
            <div class="col-md-6">
              <label class="form-label cus-label"> القاعة </label><span> :</span>
              <select class="form-select" aria-label="Default select example" id="input-field" name="selected_room">
                <% rooms.forEach(room => { %>
                  <option value="<%= room.name_room %>"><%= room.name_room %></option>
              <% }) %>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label cus-label"> الساعة </label><span> :</span>
              <select class="form-select" aria-label="Default select example" id="input-field" name="selected_Hour">
                <option value="9.00-10.3"> 9.00-10.30</option>
                <option value="10.30-12.00"> 10.30-12.00</option>
                <option value="9.00-12.00"> 9.00-12.00</option>
                <option value="13.00-14.30"> 13.00-14.30</option>
                <option value="14.30-16.00"> 14.30-16.00</option>
                <option value="13.00-16.00"> 13.00-16.00</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label cus-label"> اليوم </label><span> :</span>
              <select class="form-select" aria-label="Default select example" id="input-field" name="selected_day">
                <option value="Lundi"> Lundi</option>
                <option value=" Mardi"> Mardi</option>
                <option value=" Mercredi"> Mercredi</option>
                <option value=" Jeudi"> Jeudi</option>
                <option value=" Vendredi "> Vendredi</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label cus-label"> الحصة </label><span> :</span>
              <select class="form-select" aria-label="Default select example" id="input-field" name="name_seance">
                <% sences.forEach(sence => { %>
                  <option value="<%= sence.name_seance %>"><%= sence.name_seance %></option>
              <% }) %>
              

              </select>
            </div>


            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck1" required>
                <label class="custom-control-label" for="customCheck1">اشهد على صحة المعلومات المصرح بها</label>
            </div>
            <button type="submit" class="btn w-25 btn-primary">إضافة</button>
          </form>
      </div>
    </div>
