    <div class="center-container">
      <p> <%= messages.success %> </p>
      <div>
        <h3 id="h4"> تحديث تلميد  </h3>
      </div>
     <a href="/director" title="إلفاء" id="cancel" class="mt-5"><button type="button" class="btn-close" aria-label="Close" style="margin-left: 13px;"></button></a> 
     <div class="container my-5" dir="rtl">
        <form method="POST" action="/edit-student/<%= studentinfo._id %>?_method=PUT" class="row g-3" autocomplete="off">
         
            <div class="col-md-6">
              <label class="form-label cus-label">CIN</label><span> :</span>
              <input type="text" readonly value="<%= studentinfo.CIN %>" name="CIN" placeholder="رقم التلميذ الوطني" id="input-field" class="form-control">
            </div>
            <div class="col-md-6">
              <label class="form-label cus-label" > username  </label><span> :</span>
              <input type="text" value="<%= studentinfo.username %>" name="username" placeholder="اسم و نسب تلميد(ة)" id="input-field" class="form-control">
            </div>
            <div class="col-md-6">
                <label class="form-label cus-label" > Nom Complet  </label><span> :</span>
                <input type="text"  value="<%= studentinfo.full_name %>" name="full_name" placeholder="اسم و نسب تلميد(ة)" id="input-field" class="form-control">
              </div>
            <div class="col-md-6">
                <label class="form-label cus-label" > birthday  </label><span> :</span>
                <input type="date" value="<%= studentinfo.birthday %>" name="birthday" placeholder="اسم و نسب تلميد(ة)" id="input-field" class="form-control">
              </div>
            <div class="col-md-6">
                <label class="form-label cus-label" > selected_birthplace:  </label><span> :</span>
                <input type="date" value="<%= studentinfo.selected_birthplace %>" name="selected_birthplace" placeholder="اسم و نسب تلميد(ة)" id="input-field" class="form-control">
              </div>
            
        
           
            <div class="col-md-6">
                <label class="form-label cus-label"> Adresse Electronique </label><span> :</span>
                <input type="email" value="<%= studentinfo.email %>"   name="email" required placeholder="ادخل العنوان الالكتروني الخاص بالمستخدم" id="input-field" class="form-control">
              </div>
            
          
           
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck1" required>
                <label class="custom-control-label" for="customCheck1">اشهد على صحة المعلومات المصرح بها</label>
            </div>
            <button type="submit" class="btn w-25 btn-primary">تحديث</button>
          </form>
      </div>
    </div>
