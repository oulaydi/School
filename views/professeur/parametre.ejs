    <body>
      <div class="center-container">
        <p><%= messages.success %></p>
        <div>
          <h3 class="profile"> حسابي</h3>
        </div>
       <a href="/teacherDashboard" title="إلفاء" id="cancel" class="mt-5"><button type="button" class="btn-close" aria-label="Close" style="margin-left: 13px;"></button></a> 
       <div class="container my-5" dir="rtl">
            
                <form action="/profileTeacher/<%= teacherInfo._id %>" class="row g-3" autocomplete="off" method="POST">
            <div class="col-md-6">
    <label class="form-label cus-label">رقم البطاقة</label><span> :</span>
    <input readonly type="text" name="CIN" placeholder="رقم البطاقة" id="input-field" class="form-control" value="<%= teacherInfo.CIN %>">
</div>

              
           
              <div class="col-md-6">
                  <label class="form-label cus-label" >الإسم الكامل </label><span> :</span>
                  <input readonly type="text"  name=" name_professeur" placeholder="اسم الكامل للتلميد (ة)" id="input-field" class="form-control" value="<%= teacherInfo.CIN %>">
                </div>
             
              <div class="col-md-6">
                  <label class="form-label cus-label">إسم المستخدم </label><span> :</span>
                  <input readonly type="text"  name="num_tel" required placeholder="ادخل اسم المستخدم الخاص" id="input-field" class="form-control" value="<%= teacherInfo.num_tel %>">
                </div>
              <div class="col-md-6">
                  <label class="form-label cus-label"> المدينة </label><span> :</span>
                  <input readonly type="text"  name="username" required placeholder="المدينة " id="input-field" class="form-control" value="<%= teacherInfo.username %>">
                </div>
              <div class="col-md-6">
                  <label class="form-label cus-label"> الهاتف </label><span> :</span>
                  <input readonly type="text" name="email" required placeholder="الهاتف   " id="input-field" class="form-control" value="<%= teacherInfo.email %>">
                </div>
             
              
            </form>
        </div>
      </div>
     
           
                
             <!-- footer --->
        <%- include('../partials/footer.ejs') %>
        <!-- footer ends -->
    </body>
