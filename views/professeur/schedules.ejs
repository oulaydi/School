<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet"/>
    <link rel="stylesheet" href="css/directorPannel.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">



</head>
<body>

     <!-- Header -->
     <%- include('../partials/header.ejs') %>
     <!-- Header Ends!! -->
     <div class="container" id="header">
         
             
          
         <div>
             <h3>الفضاء الخاص بالاستاد</h3>
         </div>
         <div class="container" id="add-rem">
             <button class="btn" title="تسجيل الخروج">   
                 <a href="/logoutProf" style="color: #6c757d">
                     <i id="bi-icon2" class="bi bi-box-arrow-left fw-bold"></i>
                 </a>
             </button>

             <a href="/teacherDashboard" title="إلفاء" id="cancel" class="mt-5"><button type="button" class="btn-close" aria-label="Close" style="margin-right: 0px;margin-bottom:20px;"></button></a> 

             
         </div>
     </div>


     <div class="container mt-4 d-flex justify-content-center w-90 " dir="rtl">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th   style="text-align: center; font-size: 20px;">القاعة</th>
                    <th  style="text-align: center; font-size: 20px;" >الساعة</th>
                    <th  style="text-align: center; font-size: 20px;" >اليوم</th>
                    <th  style="text-align: center; font-size: 20px;"  >الحصة</th>
                </tr>
            </thead>
            <tbody>
                <% if (emploi.length > 0) { %>
                    <% emploi.forEach(emploi => { %>
                        <tr class="text-center">
                            <td class="table-info"><%= emploi.selected_room %></td>
                            <td class="table-info"><%= emploi.selected_Hour %></td>
                            <td class="table-info"><%= emploi.selected_day %></td>
                            <td class="table-info"><%= emploi.name_seance %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">.لا يوجد اي بببب(ة)</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    
</body>
</html>