<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="css/teacherDashboard.css" />
    <title>Professeur</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>


    <!-- SIDEBAR -->
    <section dir="ltr" id="sidebar">
		<ul class="side-menu top">
			<li class="active">
				<a href="/profileTeacher/<%= teacher._id %>">
					<i class="bx bxs-user"></i>
					<span style="font-size: 20px;" class="text"><%= teacher.username %></span>
				</a>
			</li>
			<li>
				<a href="ModulebyteacherAbsence">
					<i class="bx bxs-x-circle"></i>
					<span style="font-size: 20px;" class="text">Absence</span>
				</a>
			</li>
			<li>
				<a href="/add-cour">
					<i class="bx bxs-book"></i>
					<span style="font-size: 20px;" class="text">Cours</span>
				</a>
			</li>
			<li>
				<a href="/ModulebyteacherNote">
					<i class="bx bxs-note"></i>
					<span style="font-size: 20px;" class="text">Notes</span>
				</a>
			</li>
			<li>
				<a href="/Emploi">
					<i class="bx bxs-calendar"></i>
					<span style="font-size: 20px;" class="text">Emploi du temps</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/profileTeacher/<%= teacher._id %>">
					<i class='bx bxs-cog' ></i>
					<span style="font-size: 20px;" class="text">Paramètres</span>
				</a>
			</li>
			<li>
				<a href="logoutProf" class="logout">
					<i class='bx bx-log-out'></i>
					<span style="font-size: 20px;" class="text">Déconnexion</span>
				</a>
			</li>
		</ul>
	</section>
	
    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu' ></i>
            <form action="#">
                <div>
                <!-- <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search' ></i></button> -->
                </div>
            </form>
            <a href="#" class="notification">
                <i class='bx bxs-bell' ></i>
                <span class="num">8</span>
            </a>
            <a href="/profileTeacher/<%= teacher._id %>" class="profile">
                <img src="images/oulaydi.png">
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main dir="ltr">
            <div class="head-title">
              
                <a href="/add-cour" class="btn-download">
                    <i class='bx bxs-cloud-upload'></i>
                    <span style="font-size: 20px;" class="text">Ajouter des cours</span>
                </a>
            </div>

            <ul class="box-info">
                <li>
                    <i class='bx bxs-calendar-check' ></i>
                    <span class="text">
                        <h3><%= countCour %></h3>
                        <p style="font-size: 20px;">Cours</p>
                    </span>
                </li>
                <li>
                    <i class='bx bxs-group' ></i>
                    <span class="text">
                        <h3><%=countStudent %></h3>
                        <p style="font-size: 20px;">Élèves</p>
                    </span>
                </li>
                <li>
                    <i class='bx bxs-info-circle'></i>
                    <span class="text">
                        <h3><%= countModule %></h3>
                        <p style="font-size: 20px;">Modules</p>
                    </span>
                </li>
            </ul>


            <div dir="ltr" class="table-data">
                <div class="order" style="height: 50vh; padding-top: 6%;">
                    <div class="head">
                        <h3>Emploi du temps</h3>
                        <i class='bx bx-search'></i>
                        <i class='bx bx-filter'></i>
                    </div>
                    <div class="container mt-4 d-flex justify-content-center w-90 " dir="ltr">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th style="text-align: center; font-size: 20px;">Salle</th>
                                    <th style="text-align: center; font-size: 20px;">Heure</th>
                                    <th style="text-align: center; font-size: 20px;">Jour</th>
                                    <th style="text-align: center; font-size: 20px;">Séance</th>
                                </tr>
                                
                            </thead>
                            <tbody>
                                <% if (emploi.length > 0) { %>
                                    <% emploi.forEach(emploi => { %>
                                        <tr class="text-center">
                                            <td class="table-info"><%= emploi.selected_room %></td>
                                            <td class="table-info"><%= emploi.selected_Hour %></td>
                                            <td class="table-info"><%= emploi.selected_day %></td>
                                            <td class="table-info"><%= emploi.name_seance %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">Aucune donnée disponible</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        
                    </div>
                    
                </div>

    
                
            
            </div>
            
        </main>
        
        <!-- MAIN -->
    </section>

    
    
    <!-- CONTENT -->



	<script src="/js/teacherDashboard..js"></script>
