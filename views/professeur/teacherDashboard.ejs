<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="css/teacherDashboard.css" />
	<title>لوحة التحكم</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

</head>
<style>


	
</style>
<body>


	<!-- SIDEBAR -->
	<section dir="rtl" id="sidebar">
	
		<ul class="side-menu top">

			<li class="active">
				<a href="/profileTeacher/<%= teacher._id %>">
					<i class="bx bxs-user"></i>
					<span  style="font-size: 20px;" class="text"><%= teacher.username %></span>
				</a>
			</li>
			<li>
				<a href="ModulebyteacherAbsence">
					<i class="bx bxs-x-circle"></i>

					<span  style="font-size: 20px;" class="text">لاىحة الغياب</span>
				</a>
			</li>
			<li>
				<a href="/add-cour">
					<i class="bx bxs-book"></i>
					<span  style="font-size: 20px;" class="text">الدروس</span>
				</a>
			</li>
			<li>
				<a href="/ModulebyteacherNote">
					<i class="bx bxs-note"></i>

					<span  style="font-size: 20px;" class="text">النقط</span>
				</a>
			</li>
			<li>
				<a href="/Emploi">
					<i class="bx bxs-calendar"></i>

					<span  style="font-size: 20px;" class="text">استعمال الزمن</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/profileTeacher/<%= teacher._id %>">
					<i class='bx bxs-cog' ></i>
					<span   style="font-size: 20px;" class="text" style="font-size: 20px;">الاعدادات</span>
				</a>
			</li>
			<li>
				<a href="logoutProf" class="logout">
					<i class='bx bx-log-out'></i>
					<span  style="font-size: 20px;" class="text">تسجيل الحروج</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<form action="#">
				<div>
				<!-- <div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button> -->
				</div>
			</form>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="/profileTeacher/<%= teacher._id %>" class="profile">
				<img src="images/oulaydi.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main dir="rtl">
			<div class="head-title">
				<div class="left">
					<h1 >لوحة التحكم</h1>
				
				</div>
				<a href="/add-cour" class="btn-download">
					<i class='bx bxs-cloud-upload'></i>
					<span  style="font-size: 20px;" class="text">اضافة الدروس</span>
				</a>
			</div>

			<ul  class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3><%= countCour %></h3>
						<p  style="font-size: 20px;">الدروس</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-group' ></i>
					<span class="text">
						<h3><%=countStudent %></h3>
						<p  style="font-size: 20px;">الثلاميد</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-info-circle'></i>
					<span class="text">
						<h3><%= countModule %></h3>
						<p  style="font-size: 20px;">الوحدات</p>
					</span>
				</li>
			</ul>


			<div dir="rtl" class="table-data">
				<div class="order" style="height: 50vh;  padding-top: 6%;">
					<div class="head">
						<h3 >استعمال الزمن</h3>
						<i class='bx bx-search'></i>
						<i class='bx bx-filter'></i>
					</div>
					<div class="container mt-4 d-flex justify-content-center w-90 " dir="rtl">
						<table class="table table-striped table-bordered">
							<thead class="thead-dark">
								<tr>
									<th   style="text-align: center; font-size: 20px;">القاعة</th>
									<th  style="text-align: center; font-size: 20px;" >الساعة</th>
									<th  style="text-align: center; font-size: 20px;" >اليوم</th>
									<th  style="text-align: center; font-size: 20px;"  >الحصة</th>
								</tr>
								
							</thead>
							<tbody>
								<% if (emploi.length > 0) { %>
									<% emploi.forEach(emploi => { %>
										<tr class="text-center">
											<td  class="table-info"><%= emploi.selected_room %></td>
											<td  class="table-info"><%= emploi.selected_Hour %></td>
											<td class="table-info"><%= emploi.selected_day %></td>
											<td  class="table-info"><%= emploi.name_seance %></td>
										</tr>
									<% }) %>
								<% } else { %>
									<tr>
										<td colspan="4" class="text-center">.لا يوجد اي بببب(ة)</td>
									</tr>
								<% } %>
							</tbody>
						</table>
						
					</div>
					
				</div>

	
				
			
			</div>
			
		</main>
		
		<!-- MAIN -->
	</section>

	
	
	<!-- CONTENT -->



	<script src="/js/teacherDashboard..js"></script>
	
</body>
</html>